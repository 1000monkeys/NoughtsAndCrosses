<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" minHeight="900.0" minWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kjellvos.aletho.nac.MainScreenController">
   <center>
      <VBox fx:id="vBox" maxHeight="900.0" maxWidth="900.0" minHeight="900.0" minWidth="900.0" prefHeight="900.0" prefWidth="900.0">
         <children>
            <Button fx:id="singlePlayerButton" minHeight="280.0" minWidth="880.0" mnemonicParsing="false" onAction="#goToSinglePlayer" text="Single player">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="lobbyButton" minHeight="280.0" minWidth="880.0" mnemonicParsing="false" onAction="#goToMultiPlayer" text="Lobby">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exitButton" minHeight="280.0" minWidth="880.0" mnemonicParsing="false" text="Exit Game">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
